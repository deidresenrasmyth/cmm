@model CollegeManagementSystem.Models.Student

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enter the student information:</h2>

  @if (Model != null)
  {
<div style="font-size:45px">
    @Model.ErrorMsg
</div>
  }

